<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:id="@+id/linearLayout31">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:id="@+id/linearLayout1">
        <Navigation_View.MyTextView
            android:text="Orden Ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            card_view:customFont="Fonts/HelveticaNeue-ThinCond.otf"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:id="@+id/txtOrderTicket" />
        <Navigation_View.MyTextView
            android:text="Nombre"
            android:layout_width="fill_parent"
            android:layout_below="@id/txtOrderTicket"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:textSize="10sp"
            card_view:customFont="Fonts/HelveticaNeue-ThinCond.otf"
            android:textColor="#898a88"
            android:id="@+id/txtNombreTicket" />
        <Navigation_View.MyTextView
            android:text="Fecha de Ticket"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/txtNombreTicket"
            android:textSize="10sp"
            card_view:customFont="Fonts/HelveticaNeue-ThinCond.otf"
            android:textColor="#898a88"
            android:id="@+id/txtFechaTicket" />
        <ImageView
            android:id="@+id/img_semaforo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/txtFechaTicket" />
    <!--        <TextView
            android:text="Correo Cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:textSize="10sp"
            android:textColor="#BCBCBC"
            android:id="@+id/txtCorreoTicket" />-->
        <Navigation_View.MyTextView
            android:id="@+id/txtStatusTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/txtFechaTicket"
            android:layout_toRightOf="@id/img_semaforo"
            android:textSize="10sp"
            card_view:customFont="Fonts/HelveticaNeue-ThinCond.otf"
            android:textColor="#BCBCBC"
            android:text="Status Ticket" />
    <!--        <TextView
            android:id="@+id/txtNotaTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:textSize="10sp"
            android:textColor="#BCBCBC"
            android:text="Ticket Nota" />-->
        <Button
            android:id="@+id/btnDetalleSeguimiento"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_below="@id/img_semaforo"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="Detalle"
            android:textColor="#ffff6600" />
    </RelativeLayout>
</LinearLayout>