<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true"
    android:background="#ffff6600"
    android:id="@+id/linearLayout31">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:id="@+id/linearLayout1">
        <ImageView
            android:id="@+id/img_denuncia"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/marca911"
            android:layout_marginLeft="120dp" />
        <Navigation_View.MyTextView
            android:text="Denuncia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_denuncia"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="25dp"
            android:paddingBottom="25dp"
            card_view:customFont="Fonts/HelveticaNeue-Thin.otf"
            android:layout_alignEnd="@id/img_denuncia"
            android:textSize="30sp"
            android:textColor="#ffffffff"
            android:id="@+id/txtDenuncia" />
    <!--        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white" />-->
        <Button
            android:text="Boletín"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDenuncia"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            card_view:customFont="Fonts/HelveticaNeue-Thin.otf"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/boletin"
            android:textColor="#ffffffff"
            android:id="@+id/btnBoletin" />
        <Button
            android:text="Asesoría Jurídica"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/btnBoletin"
            android:textSize="15sp"
            android:drawableLeft="@drawable/balanza"
            card_view:customFont="Fonts/HelveticaNeue-Thin.otf"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#ffffffff"
            android:id="@+id/btnAsesoria" />
        <Button
            android:id="@+id/btnSeguimiento"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/btnAsesoria"
            android:textSize="15sp"
            card_view:customFont="Fonts/HelveticaNeue-Thin.otf"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/seguimiento"
            android:textColor="#ffffffff"
            android:text="Seguimiento" />
    </RelativeLayout>
</LinearLayout>